---
const features = [
  {
    icon: 'jar',
    title: 'Private Memory Jars',
    description:
      'Create intimate shared spaces for your closest friends. Each jar is a collection of memories that only your circle can see.',
  },
  {
    icon: 'lock',
    title: 'End-to-End Encrypted',
    description:
      'Your memories are yours alone. Everything is encrypted from your device to your friends - not even we can see them.',
  },
  {
    icon: 'photo',
    title: 'Beautiful Timelines',
    description:
      'Relive your favorite moments with beautiful photo timelines. Scroll through memories organized by time and place.',
  },
  {
    icon: 'bell',
    title: 'Real-Time Notifications',
    description:
      'Get notified instantly when friends add new memories. Stay connected without the noise of social media.',
  },
  {
    icon: 'heart',
    title: 'Minimal & Thoughtful',
    description:
      'No ads, no algorithms, no distractions. Just a simple, beautiful way to share what matters with who matters.',
  },
  {
    icon: 'users',
    title: 'Small Circles',
    description:
      'Built for your inner circle, not the whole world. Share with 2-10 of your closest friends, not 500 acquaintances.',
  },
];
---

<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-4">
        Designed for what matters
      </h2>
      <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
        Social media for people you actually care about. No feeds, no likes, no noise.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="group p-6 rounded-2xl bg-gradient-to-br from-neutral-50 to-white hover:from-primary-50 hover:to-secondary-50 transition-all duration-300 hover:shadow-lg border border-neutral-100">
            <div class="mb-4">
              {feature.icon === 'jar' && (
                <svg
                  class="w-12 h-12 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                  />
                </svg>
              )}
              {feature.icon === 'lock' && (
                <svg
                  class="w-12 h-12 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  />
                </svg>
              )}
              {feature.icon === 'photo' && (
                <svg
                  class="w-12 h-12 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
              )}
              {feature.icon === 'bell' && (
                <svg
                  class="w-12 h-12 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                  />
                </svg>
              )}
              {feature.icon === 'heart' && (
                <svg
                  class="w-12 h-12 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  />
                </svg>
              )}
              {feature.icon === 'users' && (
                <svg
                  class="w-12 h-12 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                  />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-2">{feature.title}</h3>
            <p class="text-neutral-600 leading-relaxed">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
